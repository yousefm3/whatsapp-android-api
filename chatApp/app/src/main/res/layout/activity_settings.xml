<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/Bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#075e54"
        android:gravity="center"
        android:text="Settings"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backbuttonofspecificchat"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="356dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:tint="@color/white">

    </ImageButton>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Bar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Blue Theme"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Bar"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_______________________________________________________"
        android:layout_alignTop="@id/t1"
        android:layout_marginTop="29dp"
        android:textColor="@color/black"
        android:layout_marginLeft="22dp"
        android:id="@+id/separateLine"/>

    <LinearLayout
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/separateLine">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            android:paddingTop="10dp"
            android:text="Change Base_Url :"
            android:textSize="18sp"
            android:textStyle="bold" />



    </LinearLayout>

    <TextView
        android:id="@+id/separateLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="22dp"
        android:paddingTop="205dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"
        android:text="_______________________________________________________"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/urlInput"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/separateLine"
        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_black"
        android:drawableLeft="@drawable/ic_url"
        android:ems="10"
        android:hint="Type new URL"
        android:inputType="textUri"
        android:minHeight="40dp"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/changeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/separateLine"
        android:layout_marginStart="300dp"
        android:layout_marginTop="62dp"
        android:text="Save"
        android:visibility="visible" />



</RelativeLayout>